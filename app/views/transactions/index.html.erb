<h2>Listing transactions</h2>

<%= link_to 'New Transaction', new_transaction_path %>
<br>

<table>
  <tr>
    <th>Date</th><br>
    <th>Dep</th>
    <th>Wdl</th>
     <th>Bal</th><br>
  </tr>
  
  
  <% @transactions.each do |transaction| %>
    <tr>
        <td><div class="highlight2"><%= transaction.date %></div></td>
        
        <td><div class="highlight"><%= transaction.dep %></div></td>
        
        <td><%= transaction.sumwdl(transaction.wdl1,transaction.wdl2,transaction.wdl3) %></td>
        
         <td><%= transaction.calc(transaction.bal,transaction.dep,transaction.sumwdl(transaction.wdl1,transaction.wdl2,transaction.wdl3)) %></td>
        
        <td><%= link_to 'Delete', transaction_path(transaction),
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
        </td>
    </tr>
  <% end %>
</table>